        <!--LUIS FELIPE PADILLA - 2316668-->
    
    <Window x:Class="WpfInventarioCorte3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulación Inventario - Corte 3" Height="730" Width="1100" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#E2EFDA" BorderBrush="#385723" BorderThickness="2" CornerRadius="5" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="LUIS FELIPE PADILLA ARENAS" FontWeight="Bold" FontSize="16" Foreground="#1F4E78"/>
                    <TextBlock Text="CÓDIGO: 2316668" FontWeight="Bold" FontSize="14" Foreground="#1F4E78" Margin="0,0,0,15"/>

                    <TextBlock Text="ENTRADAS" FontWeight="Bold" TextDecorations="Underline" Margin="0,0,0,10"/>

                    <Label Content="Cantidad a Pedir (Q):"/>
                    <TextBox Name="txtQ" Text="307" Padding="3"/>

                    <Label Content="Tiempo entre Pedidos (T):"/>
                    <TextBox Name="txtT" Text="13" Padding="3"/>

                    <Label Content="Inventario Inicial:"/>
                    <TextBox Name="txtInvInicial" Text="965" Padding="3"/>

                    <Label Content="Costo Pérdida Prestigio ($/u):"/>
                    <TextBox Name="txtCostoFalt" Text="1789" Padding="3"/>

                    <Label Content="Costo Pedido ($):"/>
                    <TextBox Name="txtCostoPed" Text="7452" Padding="3"/>

                    <Label Content="Costo Almacenar ($/u/día):"/>
                    <TextBox Name="txtCostoInv" Text="24" Padding="3"/>

                    <Separator Margin="0,15"/>
                    <TextBlock Text="GENERADOR LCG" FontWeight="Bold"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <Label Content="A:"/>
                            <TextBox Name="txtA" Text="2678917"/>
                            <Label Content="B:"/>
                            <TextBox Name="txtB" Text="1317513"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <Label Content="X0 (Semilla):"/>
                            <TextBox Name="txtX0" Text="4579991"/>
                            <Label Content="N:"/>
                            <TextBox Name="txtN" Text="9824217"/>
                        </StackPanel>
                    </Grid>

                    <Button Name="btnSimular" Content="EJECUTAR SIMULACIÓN" Margin="0,20,0,15" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold" FontSize="14" Click="BtnSimular_Click"/>

                    <TextBlock Text="Cargar Escenarios:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Name="btnCargarModelo1" Content="Modelo 1" Height="30" Background="#BDD7EE" Margin="0,0,5,0" Click="BtnCargarModelo1_Click"/>
                        <Button Grid.Column="1" Name="btnCargarModelo2" Content="Modelo 2" Height="30" Background="#FFE699" Margin="5,0,0,0" Click="BtnCargarModelo2_Click"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Grid.Column="1" Margin="15,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="250"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#DDEBF7" BorderBrush="#2F75B5" BorderThickness="2" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="COSTO TOTAL (Día 100 al 1000): " FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Name="lblTotal" Text="$ 0" FontWeight="Bold" FontSize="18" Foreground="Red" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Border>

            <DataGrid Name="gridResultados" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True" Margin="0,0,0,10" 
                      BorderBrush="Gray" BorderThickness="1" HeadersVisibility="Column" GridLinesVisibility="All">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="#BDD7EE"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>

            <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Background="White">
                <Grid>
                    <TextBlock Text="Comportamiento del Inventario (Gráfico)" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5" FontWeight="Bold"/>
                    <Canvas Name="canvasGrafico" Margin="50,30,20,30" ClipToBounds="True"/>

                    <TextBlock Text="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="35,0,0,30"/>
                    <TextBlock Name="lblMaxY" Text="Max" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,30,0,0"/>
                    <TextBlock Text="Días (1-1000)" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>